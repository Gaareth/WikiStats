---
import { GraphIcon, IonMdStatsIcon } from "../components/ClientIcons/Icons";
import WikiSelection from "../components/Selection/WikiSelection.astro";
import ShowCard from "../components/ShowCard.astro";
import SimpleStatCards from "../components/SimpleStatCards.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="WikiStats">
    <div>
        <h1 class="text-4xl mb-2 mt-5">
            <span class="text-gradient dark:text-gradient-dark">WikiStats</span>
        </h1>

        <!-- <h2 class="mt-5">More..</h2> -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
            <ShowCard
                href="/wiki/stats/latest"
                title="Statistics"
                desc="Which article has the most links?"
                className="dark:border-dark_02 dark:hover:border-dark_03 dark:border-2 dark:rounded-sm">
                <IonMdStatsIcon aria-label="Statistics Icon" />
            </ShowCard>

            <ShowCard
                href="wiki/path"
                title=" Shortest paths"
                desc="Find the shortest path between two articles"
                className="!border-colorful-default-rounded !border-0 after:hidden hover:after:block border-colorful before:animate-none after:animate-none min-h-24 lg:motion-safe:before:animate-pulse"
            />

            <ShowCard
                href="/wiki/graph"
                title="Graphs"
                desc="Explore thousands of articles"
                className="dark:border-dark_02 dark:hover:border-dark_03 dark:border-2 dark:rounded-sm">
                <GraphIcon aria-label="(Network) Graph Icon" />
            </ShowCard>
        </div>

        <h2 class="text-2xl mt-10 mb-1">Quick stats</h2>
         <WikiSelection
            dir={"stats/latest"}
        />
        <SimpleStatCards dump_date="latest" simple={true} />
    </div>
</Layout>
