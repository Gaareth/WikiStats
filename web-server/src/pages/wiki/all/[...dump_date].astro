    .sidebar-table {
        position: static;
        width: 100%;
    }
    @media (min-width: 1600px) {
        .sidebar-table {
            position: fixed;
            top: 11rem;
            right: 2rem;
            width: calc(((100vw - 900px) / 2) - 4rem);
            /* max-width: 420px; */
        }
    }
