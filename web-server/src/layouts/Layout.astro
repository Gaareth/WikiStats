---
import { twMerge } from "tailwind-merge";
import Alert from "../components/Alert.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import { getImage } from "astro:assets";
import favicon from "../../public/favicon-dark.svg";
import { LoadingSpinner } from "../components/ClientIcons/Icons";
import "../styles/borders.scss";
import "../styles/dual-range-slider.css";
import "../styles/global.css";
import { get_latest_date } from "../db/constants";

interface Props {
    title: string;
    desc?: string;
    bodyClass?: string;
}

const { title, desc, bodyClass } = Astro.props;
console.log(Astro.url.pathname);
const latest_dump = await get_latest_date();

const IS_UPDATING_ENV_STR: string = import.meta.env.IS_UPDATING;
const isUpdatingRn: boolean =
    IS_UPDATING_ENV_STR == "true" ||
    (typeof IS_UPDATING_ENV_STR == "boolean" && IS_UPDATING_ENV_STR);

const appleTouchIcon = await getImage({
    src: favicon,
    width: 180,
    height: 180,
    format: "png",
});
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content={desc ?? "Statistics about Wikipedia"}
        />
        <meta name="viewport" content="width=device-width" />

        <link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" />
        <link rel="apple-touch-icon" href={appleTouchIcon.src} />

        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <slot name="head" />
        <script is:inline>
            if (
                localStorage.getItem("theme") === "dark" ||
                (!("theme" in localStorage) &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches)
            ) {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>
        <link
            href="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.css"
            rel="stylesheet"
        />
    </head>
    <body class={twMerge("dark:bg-dark_00 min-h-screen relative", bodyClass)}>
        <Header />
        <div class="max-w-4xl px-4 mx-auto">
            <Alert type="error">
                <p class="font-bold mb-[0.1rem] text-lg">Disclaimer: WIP</p>
                Still work in progress :) Expect some bugs, errors, wrong data, ...
                :(
            </Alert>
            <Alert type="info">
                <div class="flex justify-between">
                    Using database backup info from {latest_dump}
                    {
                        isUpdatingRn && (
                            <span class="inline-flex items-center gap-1 font-bold uppercase">
                                <span class="inline-block w-4">
                                    <LoadingSpinner />
                                </span>
                                DATABASE is updating!
                                <a href="/dump-progress">More here</a>
                            </span>
                        )
                    }
                </div>
            </Alert>
        </div>
        <slot />

        <Footer />
        <script src="../scripts/flowbite@2.5.1.min.js"></script>
    </body>
</html>
<style is:global>
    html {
        font-family: system-ui, sans-serif;
        background-size: 224px;
    }

    main {
        font-size: 20px;
        line-height: 1.6;

        padding: 1rem;
        width: 900px;
        /* max-width: calc(100% - 2rem); */
        max-width: 100%;
        margin: auto;
    }
</style>
